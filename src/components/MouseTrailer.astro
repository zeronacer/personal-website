<style>
  #trailer {
    position: absolute;
    left: 50%;
    top: 50%;
    translate: -50% -50%;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    height: 500px;
    aspect-ratio: 1/1;
    z-index: 0;
    animation: rotate 20s infinite;
  }

  @media screen and (max-width: 480px) {
    #trailer {
      display: none;
    }
  }

  @keyframes rotate {
    from {
      rotate: 0deg;
    }

    to {
      rotate: 360deg;
    }
  }
</style>

<div id="trailer"></div>

<script>
  const trailer = document.getElementById("trailer");

  document.body.onpointermove = (event) => {
    const { clientX, clientY } = event;
    trailer.animate(
      {
        left: `${clientX}px`,
        top: `${clientY}px`,
      },
      { duration: 3000, fill: "forwards" }
    );
  };
</script>
