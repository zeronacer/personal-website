---
import BaseLayout from "layouts/BaseLayout.astro";
import MapBackground from "components/MapBackground.astro";
---

<BaseLayout>
  <MapBackground />
  <main>
    <h1 class="site-title font-jacquard">grabau.dev</h1>
    <ul class="traits">
      <li>Software Engineer</li>
      <li>Hamburg, Germany</li>
    </ul>
    <span aria-hidden="true">【 = ◈ ︿ ◈ = 】</span>
  </main>
</BaseLayout>

<style>
  main {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
  }

  .site-title {
    font-size: 3.5em;
  }

  ul.traits {
    font-family: "Micro 5", monospace;
    font-size: 1.5em;
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

    *:not(:last-child)::after {
      content: "-";
      margin: 0 0.5em;
    }
  }

  div.link-wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 1.5em;
    margin-top: 1em;

    a {
      display: inline-block;
      font-size: 1.5em;
      color: white;
      text-decoration: none;
      transition: all 200ms;

      &:hover {
        transform-origin: center;
        transform: scale(1.3);
      }
    }
  }
</style>
